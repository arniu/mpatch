{
  "name": "mpatch",
  "version": "0.1.2",
  "description": "Match and patch a file",
  "main": "index.js",
  "scripts": {
    "prelint": "prettier --write './**/*.{js,ts,md}'",
    "lint": "standard --fix",
    "test": "mocha test.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "standard --fix",
      "git add"
    ],
    "*.{ts,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/arniu/mpatch.git"
  },
  "keywords": [
    "match",
    "patch"
  ],
  "author": "Arniu Tseng",
  "license": "MIT",
  "bugs": "https://github.com/arniu/mpatch/issues",
  "homepage": "https://github.com/arniu/mpatch#readme",
  "dependencies": {
    "glob": "^7.1.2"
  },
  "devDependencies": {
    "husky": "^1.3.1",
    "lint-staged": "^8.1.1",
    "mocha": "^6.1.0",
    "prettier": "^1.10.2",
    "standard": "^12.0.1"
  }
}
